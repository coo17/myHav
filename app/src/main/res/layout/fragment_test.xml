    <View
        android:id="@+id/viewSingle"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginTop="70dp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/viewSingle2"
        android:layout_width="2dp"
        android:layout_height="650dp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toTopOf="@id/viewSingle"
        app:layout_constraintStart_toEndOf="@id/viewSingle"/>

    <TextView
        android:id="@+id/textViewSingle"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bookmark_shape"
        android:text="Yours"
        android:textColor="@color/navy_blue"
        app:layout_constraintTop_toTopOf="@id/viewSingle2"
        app:layout_constraintStart_toEndOf="@id/viewSingle2"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textViewGroup"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bookmark_shape"
        android:text="Group"
        android:textColor="@color/navy_blue"
        app:layout_constraintTop_toBottomOf="@id/textViewSingle"
        app:layout_constraintStart_toEndOf="@id/viewSingle2"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"/>




</androidx.constraintlayout.widget.ConstraintLayout>